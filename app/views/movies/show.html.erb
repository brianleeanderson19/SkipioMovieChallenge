

<div class="newmovie">
  <div class="card">
    <div class="card-block">
      <div class="show"> 
        <%= image_tag @movie.image.url(:medium) %>
        <p>
          <strong>Title:</strong>
          <%= @movie.title %>
        </p>

        <p>
          <strong>Genre:</strong>
          <%= @movie.genre %>
        </p>

        <p>
          <strong>Actors:</strong>
          <%= @movie.actors %>
        </p>

        <p>
          <strong>Rating:</strong>
          <%= @movie.rating %>
        </p>

        <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-md btn-primary" %> 
        <%= link_to 'Back', movies_path, class: "btn btn-md btn-primary" %>
      </div>
    </div>
  </div>
</div>